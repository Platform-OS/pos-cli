{
  "name": "@platformos/mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for platformOS APIs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pos-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "nodemon --exec \"ts-node --transpile-only src/index.ts\"",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist coverage node_modules/.cache",
    "prebuild": "npm run clean",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "platformos",
    "ai",
    "model-context-protocol",
    "graphql"
  ],
  "author": "platformOS Team <team@platformos.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/platformos/pos-cli/tree/main/mcp"
  },
  "bugs": {
    "url": "https://github.com/platformos/pos-cli/issues"
  },
  "homepage": "https://github.com/platformos/pos-cli/tree/main/mcp#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "request-promise-native": "^1.0.9",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.4.1",
    "@typescript-eslint/eslint-plugin": "^8.2.0",
    "@typescript-eslint/parser": "^8.2.0",
    "eslint": "^9.9.1",
    "jest": "^29.7.0",
    "nock": "^13.5.4",
    "nodemon": "^3.1.4",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "ts-jest": "^29.1.0",
    "@types/supertest": "^2.0.12"
  },
  "engines": {
    "node": ">=20"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/lib/apiWrappers.ts",
      "src/storage/fsStorage.ts",
      "src/server/mcpServer.ts",
      "src/tools/env.tools.ts",
      "src/tools/data.tools.ts",
      "src/tools/logs.tools.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
