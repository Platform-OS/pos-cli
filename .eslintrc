{
  "parser": "esprima",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": 0,
    "brace-style": [2, "1tbs"],
    "no-console": 0,
    "padded-blocks": 0,
    "indent": [2, 2, { "SwitchCase": 1 }],
    "spaced-comment": 1,
    "quotes": ["error", "single", { "avoidEscape": true }],
    "no-underscore-dangle": 0,
    "no-magic-numbers": 0,
    "quote-props": 0,
    "prefer-arrow-callback": 0,
    "space-before-function-paren": 0,
    "no-new": 0,
    "func-names": 0,
    "global-require": 0,
    "new-cap": 0,
    "arrow-body-style": 0,
    "class-methods-use-this": 0,
    "consistent-return": 0,
    "semi": [2, "always"],
    "max-len": [1, 130]
  },
  "env": {
    "node": true,
    "commonjs": true
  }
}
